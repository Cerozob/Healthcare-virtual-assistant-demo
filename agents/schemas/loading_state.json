{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://healthcare-agent.com/schemas/loading-state.json",
  "title": "Loading State",
  "description": "Schema for loading state information during request processing",
  "type": "object",
  "required": ["isLoading", "stage"],
  "properties": {
    "isLoading": {
      "type": "boolean",
      "description": "Indicates if a request is currently being processed"
    },
    "stage": {
      "type": "string",
      "enum": ["uploading", "processing", "analyzing", "completing"],
      "description": "Current stage of request processing"
    },
    
    "progress": {
      "type": "number",
      "description": "Progress percentage (0-100)",
      "minimum": 0,
      "maximum": 100
    }
  },
  "additionalProperties": false
}
