{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://healthcare-agent.com/schemas/chat-response.json",
  "title": "Healthcare Agent Response",
  "description": "Response schema for healthcare agent (AgentCore compatible)",
  "type": "object",
  "required": ["response", "sessionId", "status"],
  "properties": {
    "response": {
      "type": "string",
      "description": "The agent's response content/message"
    },
    "sessionId": {
      "type": "string",
      "description": "Session identifier for conversation continuity",
      "minLength": 33
    },
    "patientContext": {
      "type": "object",
      "description": "Patient context information extracted by the agent",
      "properties": {
        "patientId": {
          "type": "string",
          "description": "Patient identifier (cedula, medical record number, or generated ID)"
        },
        "patientName": {
          "type": "string",
          "description": "Patient full name"
        },
        "contextChanged": {
          "type": "boolean",
          "description": "Indicates if patient context changed in this interaction"
        },
        "identificationSource": {
          "type": "string",
          "enum": ["tool_extraction", "content_extraction", "image_analysis", "document_analysis", "multimodal_analysis", "default"],
          "description": "How the patient was identified"
        },
        "fileOrganizationId": {
          "type": "string",
          "description": "AI-determined ID for file organization"
        },
        "aiIdentificationData": {
          "type": "object",
          "description": "Additional AI identification metadata",
          "properties": {
            "primary_identifier_type": {
              "type": "string"
            },
            "identification_confidence": {
              "type": "string"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "memoryEnabled": {
      "type": "boolean",
      "description": "Indicates if AgentCore Memory is enabled for this session"
    },
    "memoryId": {
      "type": ["string", "null"],
      "description": "AgentCore Memory ID if memory is enabled"
    },
    "uploadResults": {
      "type": "array",
      "description": "Results of multimodal content uploads to S3",
      "items": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "content_type": {
            "type": "string"
          },
          "s3_url": {
            "type": "string"
          },
          "error": {
            "type": "string"
          },
          "patient_id": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of response generation"
    },
    "status": {
      "type": "string",
      "enum": ["success", "error"],
      "description": "Response status"
    },
    "guardrailInterventions": {
      "type": "array",
      "description": "Guardrail interventions detected during processing (shadow mode)",
      "items": {
        "type": "object",
        "required": ["source", "action"],
        "properties": {
          "source": {
            "type": "string",
            "enum": ["INPUT", "OUTPUT"],
            "description": "Whether the intervention was on user input or agent output"
          },
          "action": {
            "type": "string",
            "enum": ["GUARDRAIL_INTERVENED", "NONE"],
            "description": "Action taken by guardrail"
          },
          "content_preview": {
            "type": "string",
            "description": "First 100 characters of flagged content"
          },
          "timestamp": {
            "type": "string",
            "description": "When the evaluation occurred"
          },
          "violations": {
            "type": "array",
            "description": "Specific violations detected",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["topic_policy", "content_policy", "pii_entity", "pii_regex", "grounding_policy"],
                  "description": "Type of violation"
                },
                "topic": {
                  "type": "string",
                  "description": "Topic name for topic_policy violations"
                },
                "content_type": {
                  "type": "string",
                  "description": "Content type for content_policy violations (HATE, VIOLENCE, etc.)"
                },
                "pii_type": {
                  "type": "string",
                  "description": "PII type for pii_entity violations (EMAIL, PHONE, etc.)"
                },
                "pattern": {
                  "type": "string",
                  "description": "Pattern name for pii_regex violations"
                },
                "grounding_type": {
                  "type": "string",
                  "description": "Grounding type for grounding_policy violations"
                },
                "confidence": {
                  "type": "string",
                  "description": "Confidence level for content_policy violations"
                },
                "score": {
                  "type": "number",
                  "description": "Score for grounding_policy violations"
                },
                "threshold": {
                  "type": "number",
                  "description": "Threshold for grounding_policy violations"
                },
                "action": {
                  "type": "string",
                  "description": "Action for this specific violation (BLOCK, ANONYMIZE, etc.)"
                },
                "policy_type": {
                  "type": "string",
                  "description": "Policy type for topic_policy violations"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
